{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=QueueHubDb;Uid=user;Pwd=password;Port=3306;",
    "MySqlConnection": "Server=localhost;Database=QueueHubDb;Uid=user;Pwd=password;Port=3306;",
    "MySqlConnectionPool": "Server=localhost;Database=QueueHubDb;Uid=user;Pwd=password;Port=3306;Pooling=true;"
  },
  "Database": {
    "UseSqlDatabase": true,
    "UseInMemoryDatabase": false,
    "UseBogusRepositories": false,
    "AutoMigrate": true,
    "SeedData": false,
    "ForceReseed": false,
    "Provider": "MySQL"
  },
  "MySql": {
    "ServerVersion": "8.0.0",
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 5,
    "MaxRetryDelay": 30,
    "CommandTimeout": 60,
    "EnableSensitiveDataLogging": false,
    "EnableDetailedErrors": false,
    "EnableServiceProviderCaching": true,
    "EnableQuerySplittingBehavior": "SplitQuery",
    "MaxBatchSize": 1000,
    "EnableStringComparisonTranslations": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Grande.Fila.API": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "${JWT_KEY}",
    "Issuer": "${JWT_ISSUER:-GrandeTech.QueueHub.API}",
    "Audience": "${JWT_AUDIENCE:-GrandeTech.QueueHub.API}"
  },
  "RateLimiting": {
    "MaxRequestsPerWindow": 100,
    "WindowMinutes": 1
  },
  "DataAnonymization": {
    "DataRetentionDays": 365,
    "InactiveDataRetentionDays": 90,
    "EnableAutomaticAnonymization": true,
    "HashSalt": "${DATA_ANONYMIZATION_SALT}"
  },
  "SecurityAudit": {
    "EnableAuditing": true,
    "LogSuccessfulOperations": false,
    "LogFailedOperations": true,
    "AuditLogRetentionDays": 730,
    "IncludeSensitiveData": false
  },
  "PerformanceMonitoring": {
    "MaxHistoryPoints": 10000,
    "CleanupIntervalMinutes": 60,
    "MetricRetentionHours": 168,
    "EnableDetailedLogging": false
  }
}