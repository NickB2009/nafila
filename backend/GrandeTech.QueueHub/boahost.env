# BoaHost Production Environment Variables
# Phase 9: Production deployment on BoaHost

# Database Configuration - BoaHost MySQL
MYSQL_HOST=mysql.boahost.com
MYSQL_DATABASE=QueueHubDb
MYSQL_USER=your_boahost_username
MYSQL_PASSWORD=your_boahost_password
MYSQL_PORT=3306

# JWT Configuration
JWT_SECRET_KEY=ProductionJWTSecretKey123456789012345678901234567890123456789012345678901234567890
JWT_ISSUER=GrandeTech.QueueHub.Production
JWT_AUDIENCE=GrandeTech.QueueHub.Production
JWT_EXPIRATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=5000

# Data Anonymization
DATA_ANONYMIZATION_SALT=ProductionDataAnonymizationSalt123456789012345678901234567890123456789012345678901234567890

# Application Insights
APPLICATION_INSIGHTS_CONNECTION_STRING=InstrumentationKey=your-production-instrumentation-key;IngestionEndpoint=https://your-production-region.in.applicationinsights.azure.com/

# Monitoring
GRAFANA_ADMIN_PASSWORD=ProductionGrafanaPassword123!@#

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Security
ENABLE_CORS=true
CORS_ORIGINS=https://your-frontend-domain.com,https://your-admin-domain.com
ENABLE_HTTPS_REDIRECT=true
ENABLE_SECURITY_HEADERS=true

# Performance
ENABLE_RESPONSE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_DURATION_MINUTES=60

# Logging
LOG_LEVEL=Warning
ENABLE_STRUCTURED_LOGGING=true
ENABLE_REQUEST_LOGGING=true
